<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leave Log</title>
    <style>
        .containerh {
            text-align: center;
            margin-bottom: 20px;
        }

        .containeri {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .containert {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        img {
            max-width: 100%;
            max-height: 100%;
        }

        .container {
            /* display: flex; */
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        h1 {
            font-family: Arial, sans-serif;
            font-size: 24px;
            color: #333;
            margin: 0;
        }

        .morning-button {
            padding: 10px 20px;
            font-family: Arial, sans-serif;
            font-size: 16px;
            color: #fff;
            background-color: #ff9800;
            /* Orange */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .evening-button {
            padding: 10px 20px;
            font-family: Arial, sans-serif;
            font-size: 16px;
            color: #fff;
            background-color: #3f51b5;
            /* Indigo */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .morning-button:hover {
            background-color: #f57c00;
            /* Darker Orange */
        }

        .evening-button:hover {
            background-color: #303f9f;
            /* Darker Indigo */
        }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .login-form {

            flex-direction: column;
            align-items: center;
            gap: 16px;
            padding: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f2f2f2;
        }

        .login-form input[type="text"],
        .login-form input[type="password"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .login-form input[type="submit"] {
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .login-form input[type="submit"]:hover {
            background-color: #0056b3;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            font-family: Arial, sans-serif;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #eaeaea;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #45a049;
        }

        select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        select option:first-child {
            color: #888;
        }

        textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }
    </style>
</head>

<body>
    <div class="containerh">
        <h1>Leave Application - <span id="displayName"></span></h1>
        <% if (statusMessage) { %>
            <div class="status-message">
              <%= statusMessage %>
            </div>
          <% } %>
        <h4><span id="message"></span></h4>
        <button class="evening-button" onclick="back()">Back</button>
        <button class="morning-button" onclick="clearInfo()">Logout</button>
    </div>

    <div class="container">
        <form action="/apply-leave" method="POST">
            <input type="hidden" id="employeeId" name="employeeId" />
            <label for="leaveType">Leave Type:</label>
            <select id="leaveType" name="leaveType" required>
                <option value="" selected disabled>Select leave type</option>
                <option value="Casual">Casual</option>
                <option value="Sick">Sick</option>
                <option value="Unpaid">Unpaid</option>
            </select><br>

            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required><br>

            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required><br>

            <label for="days">Total Days of Leave:</label>
            <input type="number" id="days" value="0.25" min="0.25" step="0.25" name="days" required><br>

            <label for="reason">Reason:</label>
            <textarea id="reason" name="reason" rows="3"></textarea><br>

            <button class="evening-button" type="submit">Apply</button>
            <button class="morning-button" type="reset">Cancel</button>
        </form>

    </div>


    <script>
        function back() {
            window.location.href = '/timeinfo';
        }
        function applyleave() {

        }
        function clearInfo() {
            localStorage.clear();
            window.location.href = '/';
        }

        var userName = localStorage.getItem('un');
        var password = localStorage.getItem('pw');
        var employeeId = document.getElementById('employeeId');
        var displayName = document.getElementById('displayName');
        displayName.innerText = userName;
        employeeId.value = userName;
        function getTimeLogs() {

            var element = document.getElementById('message');
            if (userName && password) {

                fetch('/timelogdetail', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        username: userName,
                        password: password
                    })
                })
                    .then(async response => {
                        var data = await response.json();
                        if (response.ok) {

                        }
                        else {
                            alert(data.error);
                            return false;
                        }
                    })
                    .catch(error => {
                        element.innerText = 'Error in login!';
                        console.log('Error capturing time log:', error);
                    });
            }
            else {
                window.location.href = '/';
            }
        }

        getTimeLogs();


    </script>
</body>

</html>